<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintHorizontal_bias="0.6"
        android:background="@drawable/shape"
        android:padding="40dp"
        android:src="@drawable/ic_union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintHorizontal_bias="0.6"
        android:background="@drawable/shape"
        android:padding="40dp"
        android:src="@drawable/ic_union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img3"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#CC5FA5" />

    <ImageButton
        android:id="@+id/img3"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintHorizontal_bias="0.6"
        android:background="@drawable/shape"
        android:padding="40dp"
        android:src="@drawable/ic_union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img4"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#8E46A8" />

    <ImageButton
        android:id="@+id/img4"
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:layout_constraintHorizontal_bias="0.6"
        android:background="@drawable/shape"
        android:padding="40dp"
        android:src="@drawable/ic_union"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#743AB8" />

    <ImageView
        android:id="@+id/prize_image"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:background="@drawable/shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="70dp"/>
    <TextView
        android:id="@+id/prize_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/prize_image"
        app:layout_constraintEnd_toEndOf="@+id/prize_image"
        app:layout_constraintStart_toStartOf="@+id/prize_image"
        app:layout_constraintTop_toTopOf="@+id/prize_image"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/prize_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From $399.0"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/prize_image"
        app:layout_constraintEnd_toEndOf="@+id/prize_image"
        app:layout_constraintStart_toStartOf="@+id/prize_image"
        app:layout_constraintTop_toBottomOf="@+id/prize_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
