<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/img1"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/card1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/card2"
        app:layout_constraintEnd_toStartOf="@+id/img3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/img1"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/img3"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/card3"
        app:layout_constraintEnd_toStartOf="@+id/img4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img2"
        app:layout_constraintTop_toTopOf="@+id/img2"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/img4"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/card4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintTop_toTopOf="@+id/img3"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/prize_image"
        android:layout_width="177dp"
        android:layout_height="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/prize_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/prize_image"
        app:layout_constraintEnd_toEndOf="@+id/prize_image"
        app:layout_constraintStart_toStartOf="@+id/prize_image"
        app:layout_constraintTop_toTopOf="@+id/prize_image"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/prize_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From $399.0"
        android:textSize="12sp"
        android:visibility="invisible"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="@+id/prize_image"
        app:layout_constraintEnd_toEndOf="@+id/prize_image"
        app:layout_constraintStart_toStartOf="@+id/prize_image"
        app:layout_constraintTop_toTopOf="@+id/prize_name" />

</androidx.constraintlayout.widget.ConstraintLayout>